<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 배경 이미지 -->
    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/background" />

    <!-- 왼쪽 눈 하이라이트 -->
    <ImageView
        android:id="@+id/left_eye"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="372dp"
        android:layout_marginTop="225dp"
        android:src="@drawable/eye_highlight" />

    <!-- 오른쪽 눈 하이라이트 -->
    <ImageView
        android:id="@+id/right_eye"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="905dp"
        android:layout_marginTop="225dp"
        android:src="@drawable/eye_highlight" />

    <!-- 상단 안내 텍스트 -->
    <TextView
        android:id="@+id/text_guiding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="30dp"
        android:text="영웅이가 목적지로 안내 중입니다!"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:textStyle="bold" />

    <!-- 하단 터치 안내 텍스트 -->
    <TextView
        android:id="@+id/text_touch_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="40dp"
        android:text="안내를 중단하려면 화면을 터치하세요."
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:textStyle="bold" />

    <!-- 취소 버튼 (숨김 처리) -->
    <ImageView
        android:id="@+id/btn_cancel"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_gravity="bottom|start"
        android:layout_margin="50dp"
        android:scaleType="fitXY"
        android:src="@drawable/btn_cancel"
        android:visibility="gone" />

</FrameLayout>
