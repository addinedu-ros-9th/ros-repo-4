<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 배경 이미지 -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/auth_bg"
        android:scaleType="fitXY" />

    <!-- 번호 입력 배경 -->
    <ImageView
        android:id="@+id/input_bg"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="top"
        android:layout_marginStart="40dp"
        android:layout_marginTop="220dp"
        android:layout_marginEnd="40dp"
        android:scaleType="fitXY"
        android:src="@drawable/number_input_bg" />

    <!-- 번호 입력 텍스트뷰 -->
    <LinearLayout
        android:id="@+id/input_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginTop="220dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- 주민번호 앞 6자리 -->
        <TextView android:id="@+id/box_0" style="@style/InputBox"/>
        <TextView android:id="@+id/box_1" style="@style/InputBox"/>
        <TextView android:id="@+id/box_2" style="@style/InputBox"/>
        <TextView android:id="@+id/box_3" style="@style/InputBox"/>
        <TextView android:id="@+id/box_4" style="@style/InputBox"/>
        <TextView android:id="@+id/box_5" style="@style/InputBox"/>

        <!-- 하이픈 간격 -->
        <View
            android:id="@+id/dash_view"
            android:layout_width="20dp"
            android:layout_height="1dp"
            android:layout_marginHorizontal="4dp"
             />


        <!-- 주민번호 뒤 7자리 -->
        <TextView android:id="@+id/box_6" style="@style/InputBox"/>
        <TextView android:id="@+id/box_7" style="@style/InputBox"/>
        <TextView android:id="@+id/box_8" style="@style/InputBox"/>
        <TextView android:id="@+id/box_9" style="@style/InputBox"/>
        <TextView android:id="@+id/box_10" style="@style/InputBox"/>
        <TextView android:id="@+id/box_11" style="@style/InputBox"/>
        <TextView android:id="@+id/box_12" style="@style/InputBox"/>
    </LinearLayout>

    <!-- 주민번호/회원번호 탭 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="top|start"
        android:layout_marginTop="180dp"
        android:layout_marginStart="40dp">

        <ImageView
            android:id="@+id/tab_jumin"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:src="@drawable/jumin_tab_active" />

        <ImageView
            android:id="@+id/tab_member"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:src="@drawable/member_tab_inactive" />
    </LinearLayout>

    <!-- 카드 리더 아이콘 -->
    <ImageView
        android:id="@+id/icon_card_reader"
        android:layout_width="256dp"
        android:layout_height="256dp"
        android:layout_gravity="center|start"
        android:layout_marginStart="120dp"
        android:layout_marginTop="120dp"
        android:scaleType="fitXY"
        android:src="@drawable/card_reader_icon" />

    <!-- 키패드 아이콘 -->
    <ImageView
        android:id="@+id/icon_keypad"
        android:layout_width="256dp"
        android:layout_height="256dp"
        android:layout_gravity="center|end"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="120dp"
        android:scaleType="fitXY"
        android:src="@drawable/keypad_icon" />

    <!-- 키패드 -->
    <GridLayout
        android:id="@+id/keypad_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="350dp"
        android:alignmentMode="alignMargins"
        android:columnCount="3"
        android:rowCount="4"
        android:useDefaultMargins="true">

        <!-- 숫자 버튼 -->
        <ImageView android:id="@+id/btn_1" android:layout_width="90dp" android:layout_height="90dp" android:src="@drawable/number_1"/>
        <ImageView android:id="@+id/btn_2" android:layout_width="90dp" android:layout_height="90dp" android:src="@drawable/number_2"/>
        <ImageView android:id="@+id/btn_3" android:layout_width="90dp" android:layout_height="90dp" android:src="@drawable/number_3"/>
        <ImageView android:id="@+id/btn_4" android:layout_width="90dp" android:layout_height="90dp" android:src="@drawable/number_4"/>
        <ImageView android:id="@+id/btn_5" android:layout_width="90dp" android:layout_height="90dp" android:src="@drawable/number_5"/>
        <ImageView android:id="@+id/btn_6" android:layout_width="90dp" android:layout_height="90dp" android:src="@drawable/number_6"/>
        <ImageView android:id="@+id/btn_7" android:layout_width="90dp" android:layout_height="90dp" android:src="@drawable/number_7"/>
        <ImageView android:id="@+id/btn_8" android:layout_width="90dp" android:layout_height="90dp" android:src="@drawable/number_8"/>
        <ImageView android:id="@+id/btn_9" android:layout_width="90dp" android:layout_height="90dp" android:src="@drawable/number_9"/>
        <View android:layout_width="90dp" android:layout_height="90dp"/>
        <ImageView android:id="@+id/btn_0" android:layout_width="90dp" android:layout_height="90dp" android:src="@drawable/number_0"/>
        <ImageView android:id="@+id/btn_delete" android:layout_width="90dp" android:layout_height="90dp" android:src="@drawable/delete_btn"/>
    </GridLayout>

    <!-- 뒤로가기 버튼 -->
    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_gravity="bottom|start"
        android:layout_margin="50dp"
        android:scaleType="fitXY"
        android:src="@drawable/back_btn" />

    <!-- 확인 버튼 -->
    <ImageView
        android:id="@+id/btn_confirm"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_gravity="bottom|end"
        android:layout_margin="50dp"
        android:scaleType="fitXY"
        android:src="@drawable/confirm_btn" />

</FrameLayout>
