<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 배경 이미지 -->

    <!-- 왼쪽 눈 하이라이트 -->

    <!-- 오른쪽 눈 하이라이트 -->

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/background" />

    <ImageView
        android:id="@+id/right_eye"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="860dp"
        android:layout_marginTop="225dp"
        android:src="@drawable/eye_highlight" />

    <ImageView
        android:id="@+id/left_eye"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="352dp"
        android:layout_marginTop="225dp"
        android:src="@drawable/eye_highlight" />

    <!-- 👇 터치 유도 이미지 추가 -->
    <ImageView
        android:id="@+id/tap_prompt"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="720dp"
        android:src="@drawable/tap_to_start"
        android:visibility="visible" />

    <!-- 테스트 버튼 -->
    <Button
        android:id="@+id/testButton"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_gravity="top|end"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="#FF5722"
        android:elevation="20dp"
        android:padding="8dp"
        android:text="🧪 테스트"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:translationZ="20dp"
        android:visibility="gone" />

</FrameLayout>
